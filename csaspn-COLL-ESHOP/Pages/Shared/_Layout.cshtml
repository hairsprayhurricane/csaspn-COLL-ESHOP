@using Microsoft.AspNetCore.Mvc.ViewComponents
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEH-Shop</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://img.icons8.com/color/48/000000/shopping-cart--v1.png">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Toast container for notifications -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <!-- Toasts will be dynamically added here -->
    </div>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-page="/Index">
                    <i class="fas fa-shopping-cart me-2 text-primary"></i>
                    <span class="d-none d-sm-inline">MEH-Shop</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left-aligned navigation items -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="fas fa-home d-lg-none me-2"></i>Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Catalog/Index">
                                <i class="fas fa-th-large d-lg-none me-2"></i>Каталог
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Right-aligned navigation items -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Admin Panel -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-primary" asp-page="/Admin/Products/Index" title="Админ-панель">
                                    <i class="fas fa-cog"></i>
                                    <span class="d-none d-lg-inline">Админ</span>
                                </a>
                            </li>
                        }
                        
                        <!-- Cart -->
                        <li class="nav-item position-relative me-3">
                            <a class="nav-link" asp-page="/Cart/Index">
                                <i class="fas fa-shopping-cart"></i>
                                @{
                                    var cartCount = await Component.InvokeAsync("CartSummary");
                                    if (cartCount is ContentViewComponentResult result)
                                    {
                                        var count = result.Content?.Trim();
                                        if (!string.IsNullOrEmpty(count) && count != "0")
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                @count
                                                <span class="visually-hidden">товаров в корзине</span>
                                            </span>
                                        }
                                    }
                                }
                            </a>
                        </li>
                        
                        <!-- Authentication -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="d-none d-md-block me-2">
                                        <div class="text-end">
                                            <div class="fw-medium">@User.Identity?.Name</div>
                                            <small class="text-muted">Мой профиль</small>
                                        </div>
                                    </div>
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px;">
                                        <i class="fas fa-user text-primary"></i>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Profile">
                                            <i class="fas fa-user-circle me-2"></i>Профиль
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Manage/ProfileSettings">
                                            <i class="fas fa-cog me-2"></i>Настройки
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" method="post" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-percent d-lg-none me-2"></i>Акции
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">Войти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Register">Регистрация</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Search Bar -->
        <div class="bg-light py-2 border-bottom">
            <div class="container">
                <form method="get" asp-page="/Catalog/Index" class="d-flex">
                    <input type="text" 
                           name="searchString" 
                           class="form-control" 
                           placeholder="Поиск товаров..." 
                           aria-label="Search"
                           value="@(Context.Request.Query["searchString"])">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1">
        @if (IsSectionDefined("Hero"))
        {
            @RenderSection("Hero", required: false)
        }
        else
        {
            <div class="container my-4">
                @RenderBody()
            </div>
        }
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase mb-4">О магазине</h5>
                    <p>Лучшие товары по доступным ценам с доставкой по всей стране. Мы заботимся о качестве и вашем комфорте.</p>
                    <div class="social-links mt-3">
                        <a href="#" class="text-white me-3"><i class="fab fa-vk fa-lg"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-telegram fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-youtube fa-lg"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4">
                    <h5 class="text-uppercase mb-4">Информация</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">О нас</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Доставка и оплата</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Возврат и обмен</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Контакты</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5 class="text-uppercase mb-4">Контакты</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-phone-alt me-2"></i> +7 (XXX) XXX-XX-XX</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@example.com</li>
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> г. Город, ул. Примерная, д. 123</li>
                        <li class="mb-2"><i class="fas fa-clock me-2"></i> Пн-Пт: 9:00 - 20:00</li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5 class="text-uppercase mb-4">Подписаться на рассылку</h5>
                    <p>Будьте в курсе новинок и акций</p>
                    <form class="mb-3">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Ваш email">
                            <button class="btn btn-primary" type="submit"><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </form>
                    <div class="payment-methods">
                        <i class="fab fa-cc-visa fa-2x me-2"></i>
                        <i class="fab fa-cc-mastercard fa-2x me-2"></i>
                        <i class="fab fa-cc-mir fa-2x"></i>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    &copy; @DateTime.Now.Year MEH-Shop. Все права защищены.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-white-50 me-3 text-decoration-none">Политика конфиденциальности</a>
                    <a href="#" class="text-white-50 text-decoration-none">Условия использования</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <a href="#" class="btn btn-primary btn-lg back-to-top" role="button" style="display: none;">
        <i class="fas fa-arrow-up"></i>
    </a>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Back to top button
        $(window).scroll(function() {
            if ($(this).scrollTop() > 300) {
                $('.back-to-top').fadeIn('slow');
            } else {
                $('.back-to-top').fadeOut('slow');
            }
        });
        
        $('.back-to-top').click(function(e) {
            e.preventDefault();
            $('html, body').animate({scrollTop: 0}, 800);
            return false;
        });
        
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>